@page
@model BD_Wholesale_warehouse.Pages.Suppliers1.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Поставщики</h1>

<p>
    <a asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Suppliers[0].SupplierID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suppliers[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suppliers[0].Addres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suppliers[0].Phone_number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suppliers[0].Product_ID1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suppliers[0].Product_ID2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suppliers[0].Product_ID3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Suppliers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Addres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone_number)
            </td>
            <td>
                @{
                    try
                    {
                        @Model.Product.First(r => r.ID - 1 == item.ProductID1).Name
                    }
                    catch
                    {
                        <p> данных нет </p>
                    }
                }

            </td>
            <td>
                @{
                    try
                    {
                        @Model.Product.First(r => r.ID - 1 == item.ProductID2).Name
                    }
                    catch
                    {
                        <p> данных нет </p>
                    }
                }

            </td>
            <td>
                @{
                    try
                    {
                        @Model.Product.First(r => r.ID - 1 == item.ProductID3).Name
                    }
                    catch
                    {
                        <p> данных нет </p>
                    }
                }

            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Редактировать</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Подробности</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
