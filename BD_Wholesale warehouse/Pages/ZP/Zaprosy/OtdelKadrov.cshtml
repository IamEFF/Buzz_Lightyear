@page
@model BD_Wholesale_warehouse.Pages.ZP.Zaprosy.OtdelKadrov
@{
    <h1>Отдел кадров</h1>
    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Staff[0].Full_name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Staff[0].Position_ID)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Staff)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Full_name)
                    </td>
                    <td>
                        @{
                            try
                            {
                                @Model.Positions.First(r => r.ID - 3 == item.PositionID).Job_title
                            }
                            catch
                            {
                                <p> данных нет </p>
                            }
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>

}
