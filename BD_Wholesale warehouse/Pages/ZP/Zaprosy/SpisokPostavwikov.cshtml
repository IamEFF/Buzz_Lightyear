@page
@model BD_Wholesale_warehouse.Pages.ZP.Zaprosy.SpisokPostavwikov
@{
    <h1>Поставщики</h1>
    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Suppliers[0].Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Suppliers[0].Product_ID1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Suppliers[0].Product_ID2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Suppliers[0].Product_ID3)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Suppliers)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @{
                            try
                            {
                                @Model.Product.First(r => r.ID - 1 == item.ProductID1).Name
                            }
                            catch
                            {
                                <p> данных нет </p>
                            }
                        }

                    </td>
                    <td>
                        @{
                            try
                            {
                                @Model.Product.First(r => r.ID - 1 == item.ProductID2).Name
                            }
                            catch
                            {
                                <p> данных нет </p>
                            }
                        }

                    </td>
                    <td>
                        @{
                            try
                            {
                                @Model.Product.First(r => r.ID - 1 == item.ProductID3).Name
                            }
                            catch
                            {
                                <p> данных нет </p>
                            }
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>

}
