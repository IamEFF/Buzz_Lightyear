    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr>

                <td>
                    @Model.Product_Type.Name
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            </tr>
        }
    </tbody>
</table>
