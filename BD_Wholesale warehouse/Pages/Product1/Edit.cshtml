@page
@model BD_Wholesale_warehouse.Pages.Product1.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать</h1>

<h4>Товары</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.ID" />
            <div class="form-group">
                <label asp-for="Product.Product_ID" class="control-label"></label>
                <input asp-for="Product.Product_ID" class="form-control" />
                <span asp-validation-for="Product.Product_ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Product_typeID" class="control-label"></label>
                <input asp-for="Product.Product_typeID" class="form-control" />
                <span asp-validation-for="Product.Product_typeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Manufacturer" class="control-label"></label>
                <input asp-for="Product.Manufacturer" class="form-control" />
                <span asp-validation-for="Product.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Storage_conditions" class="control-label"></label>
                <input asp-for="Product.Storage_conditions" class="form-control" />
                <span asp-validation-for="Product.Storage_conditions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Packaging" class="control-label"></label>
                <input asp-for="Product.Packaging" class="form-control" />
                <span asp-validation-for="Product.Packaging" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Shelf_life" class="control-label"></label>
                <input asp-for="Product.Shelf_life" class="form-control" />
                <span asp-validation-for="Product.Shelf_life" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
